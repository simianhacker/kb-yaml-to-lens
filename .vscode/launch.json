{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Compile Example Dashboards",
            "type": "debugpy",
            "request": "launch",
            "module": "dashboard_compiler.cli",
            "args": [
                "compile",
                "--input-dir",
                "packages/kb-dashboard-docs/content/examples"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Compile Example Dashboards and Upload",
            "type": "debugpy",
            "request": "launch",
            "module": "dashboard_compiler.cli",
            "args": [
                "compile",
                "--input-dir",
                "packages/kb-dashboard-docs/content/examples",
                "--upload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}